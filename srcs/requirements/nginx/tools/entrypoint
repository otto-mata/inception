#!/bin/sh

if [ ! -f "/etc/nginx/ssl/nginx.key" ]; then
	openssl req \
		-x509 \
		-nodes \
		-days 365 \
		-newkey rsa:4096 \
		-sha256 \
		-keyout /etc/nginx/ssl/nginx.key \
		-out /etc/nginx/ssl/nginx.cert \
		-subj "/C=FR/ST=Paris/L=Paris/O=42/OU=Students/CN=tblochet.42.fr"
	date +install_%s%z > /build/installed
fi

exec nginx
